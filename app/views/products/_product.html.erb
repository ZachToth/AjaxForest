<% @products.each do |product| %>
<div class="product">
<div class="resize"><a class="th" ><%= image_tag "new-product.jpg" %></a></div>
<%= link_to product.name, "/products/#{product.id}" %>
<%= product.description %><br>
<%= product.formatted_price %><br>
<%= button_to 'Add to Cart', line_items_path(product_id: product), :id => 'line_item' %>
</div>
<% end %>
