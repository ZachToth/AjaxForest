<% @page_title = "All Products" %>
<%= paginate @products %>

<div id="search_bar">
<h3> Search </h3>
<%= form_tag products_path, id: 'search_form', method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search', :class => "button" %>
<% end %>
</div>

<div id="products">
<%=render @products %>
</div>

<nav>
<%= link_to "Add a product!", new_product_path %>
</nav>
